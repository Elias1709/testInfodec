@model EstudiantesApp.Models.Estudiante
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Editar">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <h2 class="text-info pl-3">Editar categoría</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCompleto" class="form-label">Nombre Completo</label>
                    <input asp-for="NombreCompleto" class="form-control" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Parcial1" class="form-label">Parcial 1</label>
                    <input asp-for="Parcial1" class="form-control" />
                    <span asp-validation-for="Parcial1" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Parcial2" class="form-label">Parcial 2</label>
                    <input asp-for="Parcial2" class="form-control" />
                    <span asp-validation-for="Parcial2" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Parcial3" class="form-label">Parcial 3</label>
                    <input asp-for="Parcial3" class="form-control" />
                    <span asp-validation-for="Parcial3" class="text-danger"></span>
                </div>
            </div>
            
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-warning"> Actualizar</button>
                <a asp-controller="Estudiante" asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    </div>


</form>







