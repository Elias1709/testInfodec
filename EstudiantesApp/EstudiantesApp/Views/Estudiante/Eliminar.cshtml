@model EstudiantesApp.Models.Estudiante
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <h2 class="text-danger pl-3">Esta seguro de eliminar al estudiante?</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCompleto" class="form-label">Nombre Completo</label>
                    <input asp-for="NombreCompleto" disabled class="form-control" />

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Parcial1" class="form-label">Parcial 1</label>
                    <input asp-for="Parcial1" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Parcial2" class="form-label">Parcial 2</label>
                    <input asp-for="Parcial2" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Parcial3" class="form-label">Parcial 3</label>
                    <input asp-for="Parcial3" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Final" class="form-label">Final </label>
                    <input asp-for="Final" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-danger"> Eliminar</button>
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    </div>


</form>



